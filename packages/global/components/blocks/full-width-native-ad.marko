import { get } from "@parameter1/base-cms-object-path";

$ const blockName = "full-width-native-ad";

<global-native-x-render|{ node: nxNode, linkAttrs, containerAttrs }|
  name="default"
  when=true
>
  <if(nxNode)>
    <marko-web-block name=blockName>
      <global-section-feed-content-node
        modifiers=["full-width-native-ad"]
        node=nxNode
        sponsored-by=get(nxNode, "company.name")
        with-dates=false
      />
    </marko-web-block>
  </if>
</global-native-x-render>
