<default-theme-card-deck-flow cols=4 nodes=input.nodes>
  <@slot|{ node }|>
    <global-content-node
      image-position="top"
      card=true
      flush=true
      full-height=true
      with-teaser=false
      with-dates=false
      node=node
    >
      <@image ar="3:2" fluid=true />
    </global-content-node>
  </@slot>
</default-theme-card-deck-flow>
