import hierarchyAliases from "@base-cms/marko-web/utils/hierarchy-aliases";

$ const { id, alias, name, pageNode } = input;
$ const { GAM } = out.global;

<marko-web-website-section-page-layout id=id alias=alias name=name>
  <@head>
    <marko-web-gtm-website-section-context|{ context }| alias=alias>
      <marko-web-gtm-push data=context />
    </marko-web-gtm-website-section-context>
  </@head>

  <@above-container>
    <marko-web-resolve-page|{ data: section }| node=pageNode>
      $ const aliases = hierarchyAliases(section);
      <!-- <marko-web-gam-out-of-page-ad ...GAM.getAdUnit({ name: "wallpaper", aliases }) /> -->
      <!-- <marko-web-gam-out-of-page-ad ...GAM.getAdUnit({ name: "interstitial", aliases }) /> -->
    </marko-web-resolve-page>
  </@above-container>

  <@page>
    <marko-web-resolve-page|{ data: section }| node=pageNode>
      $ const aliases = hierarchyAliases(section);
      <marko-web-page-wrapper>
        <@section>
          <global-gam-define-display-ad
            name="leaderboard"
            aliases=aliases
            modifiers=["max-width-970", "center", "margin-auto-x", "inline"]
          />
        </@section>

        <@section modifiers=["my-block-lg"]>
          <global-top-stories-block with-header=false />
        </@section>

        <!-- Opinion -->
        <@section modifiers=["break-container"]>
          <global-opinion-block alias="opinion" />
        </@section>

        <!-- 3 Column Section List Blocks -->
        <@section modifiers=["my-block-lg"]>
          <div class="row">
            <div class="col-md-4">
              <global-section-list-block alias="trucks" />
            </div>
            <div class="col-md-4">
              <global-section-list-block alias="business" />
            </div>
            <div class="col-md-4">
              <global-section-list-block alias="technology" />
            </div>
          </div>
        </@section>

        <@section>
          <global-gam-define-display-ad
            name="rotation"
            aliases=aliases
            modifiers=["max-width-970", "center", "margin-auto-x", "inline"]
          />
        </@section>

        <!-- Partners in Business -->
        <@section modifiers=["my-block-lg"]>
          <global-partners-in-business-block alias="ccj-innovators" default-description="Lorem ipsum dolor sit amet" />
        </@section>

        <!-- Top 250 + Resource Lib -->
        <@section modifiers=["my-block-lg"]>
          <div class="row row--block">
            <div class="col-md-6">
              <global-ccj-top-250-block />
            </div>
            <div class="col-md-6">
              <global-resource-library-block />
            </div>
          </div>
        </@section>

        <@section modifiers=["my-block-lg"]>
          <global-most-popular-block />
        </@section>

        <@section>
          <global-gam-define-display-ad
            name="rotation"
            aliases=aliases
            modifiers=["max-width-970", "center", "margin-auto-x", "inline"]
          />
        </@section>

        <!-- Gear -->
        <@section modifiers=["my-block-lg"]>
          <global-gear-block alias="products" default-description="Lorem ipsum dolor sit amet" />
        </@section>
        <!-- Reader Rigs -->
        <@section modifiers=["my-block-lg"]>
          <global-reader-rigs-block alias="workforce" default-description="Lorem ipsum dolor sit amet" />
        </@section>
        <!-- Books, Guides, and Data -->

        <@section>
          <global-gam-define-display-ad
            name="rotation"
            aliases=aliases
            modifiers=["max-width-970", "center", "margin-auto-x", "inline"]
          />
        </@section>
      </marko-web-page-wrapper>
    </marko-web-resolve-page>
  </@page>
</marko-web-website-section-page-layout>
