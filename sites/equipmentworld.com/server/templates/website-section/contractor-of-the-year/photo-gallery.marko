      },
    ],
  },
];

<global-website-section-default-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
>
  <@section|{ aliases }| modifiers=["first"]>
    <theme-gam-define-display-ad
      name="leaderboard"
      position="section_page"
      aliases=aliases
      modifiers=["inter-block"]
    />
  </@section>
  <@section|{ blockName }|>
    <eqw-coty-nav alias="contractor-of-the-year" />

    $ const section = {
      name: "Photo Gallery",
    };
    <marko-web-website-section-name tag="h1" block-name=blockName obj=section />

    <for|gallery| of=galleries>
      <div>
        <h3 class="mb-3">${gallery.name}</h3>
        <div class="row">
          <for|image| of=gallery.images>
            <div class="col-md-4">
              <marko-web-img
                link={ href: image.href }
                src=image.src
                attrs={ style: "width: 300px;" }
                class="mb-3"
              />
            </div>
          </for>
        </div>
        <p class="mb-4">Click on the images above to view the gallery.</p>
      </div>
    </for>
  </@section>
</global-website-section-default-layout>
