<global-website-section-default-layout
  id=input.id
  alias=input.alias
  name=input.name
  page-node=input.pageNode
>
  <@section|{ aliases }| modifiers=["first"]>
    <theme-gam-define-display-ad
      name="leaderboard"
      position="section_page"
      aliases=aliases
      modifiers=["inter-block"]
    />
    <theme-gam-wallpaper-ad aliases=aliases position="section_page" />
  </@section>

  <@section>
    <site-directory-title />
  </@section>

  <@section|props|>
    $ const { aliases } = props;
    <div class="row">
      <div class="col-lg-8">
        <${input.leftCol} ...props />
      </div>
      <div class="col-lg-4">
        <site-directory-about />
        <site-directory-rail-ad aliases=aliases />
      </div>
    </div>
  </@section>

  <@section|{ aliases }|>
    <theme-gam-define-display-ad
      name="rotation"
      position="section_page"
      aliases=aliases
      modifiers=["inter-block"]
    />
  </@section>
</global-website-section-default-layout>
